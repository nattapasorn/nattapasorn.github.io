<!DOCTYPE html>
<html lang="th">
<head>
  <meta charset="UTF-8">
  <title>Memory Journey</title>
  <style>
    body {
      margin: 0;
      font-family: sans-serif;
      text-align: center;
    }
    .page {
      display: none;
      height: 100vh;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    #page1 {
      display: flex;
      background-color: #f578b5;
      color: white;
    }
    #page2 {
      display: none;
      background: url('your_background_image.jpg') no-repeat center center;
      background-size: cover;
      color: black;
    }
    #page3 {
      display: none;
      background: #ffeef5;
      flex-direction: column;
      justify-content: center;
    }
    button {
      padding: 10px 20px;
      margin: 10px;
      font-size: 1.2em;
      border: none;
      border-radius: 20px;
      cursor: pointer;
    }
    #yesBtn {
      background: #4cd964;
      color: white;
    }
    #noBtn {
      background: #ff3b30;
      color: white;
      position: absolute;
    }
    .lock-input {
      display: grid;
      grid-template-columns: repeat(3, 60px);
      gap: 10px;
      justify-content: center;
      background-color: rgba(255,255,255,0.8);
      padding: 20px;
      border-radius: 15px;
    }
    .lock-input button {
      font-size: 1.5em;
    }
    .envelope {
      position: relative;
      width: 300px;
      height: 200px;
    }
    .hearts {
      font-size: 2em;
      color: pink;
      animation: float 4s infinite;
    }
    @keyframes float {
      0% { transform: translateY(0); opacity: 1; }
      100% { transform: translateY(-100px); opacity: 0; }
    }
  </style>
</head>
<body>

<div id="page1" class="page">
  <h2>พร้อมจะย้อนดูความทรงจำหรือยัง?</h2>
  <div>
    <button id="yesBtn" onclick="goToPage(2)">พร้อมแล้ว</button>
    <button id="noBtn">ไม่</button>
  </div>
</div>

<div id="page2" class="page">
  <div>
    <p>ใส่รหัสเพื่อปลดล็อก</p>
    <div class="lock-input" id="pinInput">
      <!-- JS will generate keypad -->
    </div>
  </div>
</div>

<div id="page3" class="page">
  <div class="envelope">
    <div class="hearts">Happy Valentine's Day!</div>
    <p>ถึงคนพิเศษ, คนที่เข้ามาเป็นส่วนหนึ่งในชีวิต ทำให้ทุกมของฉันมีค่าขึ้นทุกวินาที</p>
    <p>To: คนพิเศษ</p>
  </div>
</div>

<script>
  const pages = {
    1: document.getElementById('page1'),
    2: document.getElementById('page2'),
    3: document.getElementById('page3')
  };

  function goToPage(num) {
    Object.values(pages).forEach(p => p.style.display = 'none');
    pages[num].style.display = 'flex';
  }

  // ปุ่ม "ไม่" หนี
  const noBtn = document.getElementById('noBtn');
  noBtn.addEventListener('mouseover', () => {
    const x = Math.random() * (window.innerWidth - 100);
    const y = Math.random() * (window.innerHeight - 50);
    noBtn.style.left = `${x}px`;
    noBtn.style.top = `${y}px`;
  });

  // หน้ากดรหัส
  const correctPin = '1103';
  let inputPin = '';
  const pinInput = document.getElementById('pinInput');

  const renderKeypad = () => {
    const numbers = [...Array(10).keys()];
    numbers.forEach(n => {
      const btn = document.createElement('button');
      btn.textContent = n;
      btn.onclick = () => {
        inputPin += n;
        if (inputPin.length === 4) {
          if (inputPin === correctPin) {
            goToPage(3);
          } else {
            alert("รหัสผิดนะ ลองอีกครั้ง");
            inputPin = '';
          }
        }
      };
      pinInput.appendChild(btn);
    });

    const clear = document.createElement('button');
    clear.textContent = 'ลบ';
    clear.onclick = () => inputPin = '';
    pinInput.appendChild(clear);

    const confirm = document.createElement('button');
    confirm.textContent = 'ตกลง';
    confirm.onclick = () => {
      if (inputPin === correctPin) {
        goToPage(3);
      } else {
        alert("รหัสผิดนะ ลองอีกครั้ง");
        inputPin = '';
      }
    };
    pinInput.appendChild(confirm);
  };

  renderKeypad();
</script>

</body>
</html>
